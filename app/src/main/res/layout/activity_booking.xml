<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F9FF"
    android:fillViewport="true"
    android:overScrollMode="never">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="24dp">

        <!-- Blue header card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/headerCard"
            android:layout_width="0dp"
            android:layout_height="170dp"
            android:layout_margin="16dp"
            app:cardCornerRadius="22dp"
            app:cardElevation="12dp"
            app:cardUseCompatPadding="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_header_gradient"
                android:padding="18dp"
                android:orientation="vertical">

                <!-- Top row: logo + title -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <!-- NEW (safe): Logo -->
                    <ImageView
                        android:id="@+id/ivLogo"
                        android:layout_width="46dp"
                        android:layout_height="46dp"
                        android:src="@drawable/ic_logo"
                        android:contentDescription="App Logo"
                        android:background="@drawable/bg_logo_circle"
                        android:padding="6dp" />

                    <TextView
                        android:id="@+id/tvBookingTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="Booking Details"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:letterSpacing="0.02" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvProviderInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Provider: -"
                    android:textSize="14sp"
                    android:textColor="#DCE9FF"
                    android:layout_marginTop="10dp"
                    android:lineSpacingExtra="2dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="12dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#33FFFFFF" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- White form card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/formCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="6dp"
            app:cardCornerRadius="22dp"
            app:cardElevation="12dp"
            app:cardUseCompatPadding="true"
            app:layout_constraintTop_toBottomOf="@id/headerCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="18dp"
                android:orientation="vertical">

                <!-- Date -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select Date"
                    android:textStyle="bold"
                    android:textColor="#0B1F3A"
                    android:letterSpacing="0.02" />

                <EditText
                    android:id="@+id/etDate"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:hint="Tap to choose date"
                    android:focusable="false"
                    android:clickable="true"
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp"
                    android:background="@drawable/bg_input"
                    android:textColor="#0B1F3A"
                    android:textColorHint="#6B7C93"
                    android:layout_marginTop="8dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="14dp" />

                <!-- Time -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select Time"
                    android:textStyle="bold"
                    android:textColor="#0B1F3A"
                    android:letterSpacing="0.02" />

                <EditText
                    android:id="@+id/etTime"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:hint="Tap to choose time"
                    android:focusable="false"
                    android:clickable="true"
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp"
                    android:background="@drawable/bg_input"
                    android:textColor="#0B1F3A"
                    android:textColorHint="#6B7C93"
                    android:layout_marginTop="8dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="14dp" />

                <!-- Address -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address"
                    android:textStyle="bold"
                    android:textColor="#0B1F3A"
                    android:letterSpacing="0.02" />

                <EditText
                    android:id="@+id/etAddress"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:hint="Enter your address"
                    android:inputType="textPostalAddress"
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp"
                    android:background="@drawable/bg_input"
                    android:textColor="#0B1F3A"
                    android:textColorHint="#6B7C93"
                    android:layout_marginTop="8dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="14dp" />

                <!-- Problem Details -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Problem Details"
                    android:textStyle="bold"
                    android:textColor="#0B1F3A"
                    android:letterSpacing="0.02" />

                <EditText
                    android:id="@+id/etDetails"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:hint="Describe your problem..."
                    android:gravity="top"
                    android:inputType="textMultiLine"
                    android:padding="14dp"
                    android:background="@drawable/bg_input"
                    android:textColor="#0B1F3A"
                    android:textColorHint="#6B7C93"
                    android:layout_marginTop="8dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="18dp" />

                <!-- Confirm button -->
                <Button
                    android:id="@+id/btnConfirmBooking"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:text="CONFIRM BOOKING"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/bg_btn_primary"
                    android:stateListAnimator="@null"
                    android:elevation="0dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
