<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F9FF">

    <!-- Top blue header -->
    <View
        android:id="@+id/headerBlue"
        android:layout_width="0dp"
        android:layout_height="220dp"
        android:background="@drawable/bg_header_gradient"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/register_title"
        android:textColor="#FFFFFF"
        android:textSize="26sp"
        android:textStyle="bold"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/register_subtitle"
        android:textColor="#E3F2FD"
        android:textSize="14sp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- White card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardRegister"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="-40dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:layout_constraintTop_toBottomOf="@id/headerBlue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/register_card_title"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#0D47A1"
                android:layout_marginBottom="14dp"/>

            <!-- Name -->
            <EditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="@string/hint_full_name"
                android:inputType="textPersonName"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:background="@drawable/bg_input"

                android:textColor="#222222"
                android:textColorHint="#78909C"
                android:autofillHints="name" />

            <View
                android:layout_width="match_parent"
                android:layout_height="12dp"/>

            <!-- Email -->
            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="@string/hint_email"
                android:inputType="textEmailAddress"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:background="@drawable/bg_input"

                android:textColor="#222222"
                android:textColorHint="#78909C"
                android:autofillHints="emailAddress" />

            <View
                android:layout_width="match_parent"
                android:layout_height="12dp"/>

            <!-- Password -->
            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="@string/hint_password_register"
                android:inputType="textPassword"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:background="@drawable/bg_input"

                android:textColor="#222222"
                android:textColorHint="#78909C"
                android:autofillHints="newPassword" />

            <View
                android:layout_width="match_parent"
                android:layout_height="18dp"/>

            <!-- Register Button -->
            <Button
                android:id="@+id/btnRegister"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:text="@string/register_button"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:backgroundTint="#1565C0"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="14dp"/>

            <!-- Go to Login -->
            <TextView
                android:id="@+id/tvGoLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/register_login_prompt"
                android:textColor="#1565C0"
                android:textStyle="bold"
                android:layout_gravity="center"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
