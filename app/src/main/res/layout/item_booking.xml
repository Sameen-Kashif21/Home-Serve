<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="18dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvBookingProvider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ali Electric Works"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#0D47A1"/>

        <TextView
            android:id="@+id/tvBookingCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Electrician"
            android:textSize="14sp"
            android:textColor="#607D8B"
            android:layout_marginTop="4dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E6EEFF"

            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/tvBookingDateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date: 17/12/2025  Time: 18:00"
            android:textSize="14sp"
            android:textColor="#263238"/>

        <TextView
            android:id="@+id/tvBookingStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status: Pending"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="#1565C0"
            android:layout_marginTop="6dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:background="@drawable/bg_status_pill"
            />

    </LinearLayout>

</androidx.cardview.widget.CardView>
