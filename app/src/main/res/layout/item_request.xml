<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="14dp">

        <TextView
            android:id="@+id/tvReqUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User: Ali"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#0B1F3A" />

        <TextView
            android:id="@+id/tvReqInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date/Time/Address"
            android:textSize="14sp"
            android:textColor="#52708A"
            android:layout_marginTop="6dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAccept"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:text="ACCEPT"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@drawable/bg_btn_accept"

                app:cornerRadius="14dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDecline"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:text="DECLINE"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@drawable/bg_btn_decline"

                app:cornerRadius="14dp" />

        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
