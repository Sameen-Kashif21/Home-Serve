<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F8FF"
    android:fillViewport="true"
    android:overScrollMode="never">

    <LinearLayout
        android:id="@+id/rootContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:paddingTop="18dp"
        android:paddingBottom="24dp">

        <!-- HEADER CARD (Premium) -->
        <LinearLayout
            android:id="@+id/headerCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="@drawable/bg_header_gradient"
            android:elevation="10dp"
            android:clipToPadding="false">

            <!-- Top row: Logo + App Name -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- NEW (safe): Logo -->
                <ImageView
                    android:id="@+id/ivLogo"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:src="@drawable/ic_logo"
                    android:contentDescription="App Logo"
                    android:background="@drawable/bg_logo_circle"
                    android:padding="8dp" />

                <TextView
                    android:id="@+id/tvAppName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="HomeServe"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.03" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvHeaderTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="About"
                android:textColor="@android:color/white"
                android:textSize="28sp"
                android:textStyle="bold"
                android:letterSpacing="0.01" />

            <TextView
                android:id="@+id/tvHeaderSub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Know more about the app features"
                android:textColor="#DCE9FF"
                android:textSize="14sp"
                android:lineSpacingExtra="3dp" />

            <!-- subtle separator -->
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#33FFFFFF" />

        </LinearLayout>

        <!-- Spacing -->
        <View
            android:layout_width="match_parent"
            android:layout_height="14dp" />

        <!-- CONTENT CARD -->
        <LinearLayout
            android:id="@+id/aboutCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="18dp"
            android:background="@drawable/bg_card_white"
            android:elevation="8dp"
            android:clipToPadding="false">

            <!-- Section title row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <View
                    android:layout_width="4dp"
                    android:layout_height="18dp"
                    android:background="@drawable/bg_blue_bar" />

                <TextView
                    android:id="@+id/tvSectionTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="App Details"
                    android:textColor="#0B1F3A"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.02" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="12dp" />

            <!-- ORIGINAL TEXTVIEW (ID SAME) -->
            <TextView
                android:id="@+id/tvAbout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#223B5A"
                android:lineSpacingExtra="6dp"
                android:text="About HomeServe\n\nHomeServe is a Home Services Booking App.\n\nFeatures:\n• Login/Register with Firebase Authentication\n• Providers list from Firestore\n• Book services with date/time/address/details\n• My Bookings list from Firestore\n• Booking Details + Call Provider\n\nMade for Semester Project (MAD).\nVersion: 1.0" />

            <View
                android:layout_width="match_parent"
                android:layout_height="16dp" />

            <!-- divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E6EEFF" />

            <View
                android:layout_width="match_parent"
                android:layout_height="14dp" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="18dp" />

    </LinearLayout>
</ScrollView>
