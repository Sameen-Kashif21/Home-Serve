<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:fillViewport="true"
    android:overScrollMode="never">

    <LinearLayout
        android:id="@+id/rootContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="18dp">

        <!-- Top Blue Header (like sample) -->
        <LinearLayout
            android:id="@+id/headerCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#1565C0"
            android:padding="20dp"
            android:elevation="6dp"
            android:clipToPadding="false"
            android:outlineProvider="background">

            <TextView
                android:id="@+id/tvAppName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HomeServe"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvHeaderTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="About"
                android:textColor="@android:color/white"
                android:textSize="26sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvHeaderSub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Know more about the app features"
                android:textColor="#EAF2FF"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Spacing -->
        <View
            android:layout_width="match_parent"
            android:layout_height="14dp" />

        <!-- Card Content -->
        <LinearLayout
            android:id="@+id/aboutCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="18dp"
            android:elevation="4dp"
            android:clipToPadding="false"
            android:outlineProvider="background">

            <TextView
                android:id="@+id/tvSectionTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="App Details"
                android:textColor="#0B1F3A"
                android:textSize="16sp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <!-- YOUR ORIGINAL TEXTVIEW (ID NOT CHANGED) -->
            <TextView
                android:id="@+id/tvAbout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#0B1F3A"
                android:lineSpacingExtra="6dp"
                android:text="About HomeServe\n\nHomeServe is a Home Services Booking App.\n\nFeatures:\n• Login/Register with Firebase Authentication\n• Providers list from Firestore\n• Book services with date/time/address/details\n• My Bookings list from Firestore\n• Booking Details + Call Provider\n\nMade for Semester Project (MAD).\nVersion: 1.0" />

            <View
                android:layout_width="match_parent"
                android:layout_height="12dp" />

            <!-- Blue divider line -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#D6E6FF" />

            <View
                android:layout_width="match_parent"
                android:layout_height="12dp" />

            <!-- Small footer pill -->
            <TextView
                android:id="@+id/tvFooter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:text="White + Blue Modern UI"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#1565C0"
                android:background="#EAF2FF" />
        </LinearLayout>

        <!-- Bottom spacing -->
        <View
            android:layout_width="match_parent"
            android:layout_height="18dp" />

    </LinearLayout>
</ScrollView>
